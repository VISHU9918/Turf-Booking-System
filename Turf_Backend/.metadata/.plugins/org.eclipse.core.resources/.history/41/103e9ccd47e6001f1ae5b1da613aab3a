package com.example.turf.repository;

import org.springframework.data.jpa.repository.JpaRepository;

import com.example.turf.model.TurfBooking;  // Adjusting to the correct entity
import java.util.List;
import java.util.Optional;

public interface BookingRepository extends JpaRepository<TurfBooking, Long> {

    // Find all bookings for a specific Turf (roomId replaced with turfId)
    List<TurfBooking> findByTurfId(Long turfId);

    // Find a booking by its confirmation code
    Optional<TurfBooking> findByBookingConfirmationCode(String confirmationCode);

    // Find all bookings by guest's email
    List<TurfBooking> findByGuestEmail(String email);
}
