package com.example.turf.service;

import org.springframework.web.multipart.MultipartFile;

import com.example.turf.model.Turf;   // Updated to use Turf model

import java.io.IOException;
import java.math.BigDecimal;
import java.sql.SQLException;
import java.time.LocalDate;
import java.util.List;
import java.util.Optional;

public interface IRoomService {

    // Add a new Turf (room) to the system
    Turf addNewTurf(MultipartFile photo, String turfType, BigDecimal turfPrice) throws SQLException, IOException;

    // Get a list of all Turf types (room types)
    List<String> getAllTurfTypes();

    // Get a list of all available Turfs (rooms)
    List<Turf> getAllTurfs();

    // Get the photo of a specific Turf by its ID
    byte[] getTurfPhotoByTurfId(Long turfId) throws SQLException;

    // Delete a Turf (room) by its ID
    void deleteTurf(Long turfId);

    // Update the information of an existing Turf (room)
    Turf updateTurf(Long turfId, String turfType, BigDecimal turfPrice, byte[] photoBytes);

    // Get a specific Turf (room) by its ID
    Optional<Turf> getTurfById(Long turfId);

    // Get a list of available Turfs based on the check-in and check-out dates and turf type
    List<Turf> getAvailableTurfs(LocalDate checkInDate, LocalDate checkOutDate, String turfType);
}
